{
    "manifest_version": 3,
    "name": "Polish",
    "version": "1.0.0",
    "description": "A Chrome extension for proofreading and polishing text.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "19": "icons/icon19.png",
            "38": "icons/icon38.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Polish"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus",
        "activeTab",
        "clipboardWrite",
        "nativeMessaging"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "18": "icons/icon19.png",
        "38": "icons/icon38.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}